<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<section id="contact">

	<div class="row section-intro">
		<div class="col-twelve">

			<h5>İletişim</h5>
			<h1>Benimle iletişime geçmek için formu doldurunuz.</h1>

			<p class="lead">Her türlü öneri şikayet ve diğer talepleriniz için site üzerinden benimle iletişime geçebilirsiniz.</p>

		</div>
	</div> <!-- /section-intro -->

	<div class="row contact-form">

		<div class="col-twelve">

			<!-- form -->
			<form id="form" >
				<fieldset>

					<div class="form-field">
						<input name="contactName" type="text" id="Name" placeholder="Ad Soyad" value="" minlength="2" required>
					</div>
					<div class="form-field">
						<input name="contactEmail" type="email" id="Mail" placeholder="Email" value="" required>
					</div>
					<div class="form-field">
						<input name="contactSubject" type="text" id="Subject" placeholder="Konu" value="">
					</div>
					<div class="form-field">
						<textarea name="contactMessage" style="color:black !important;" id="Message" placeholder="Mesaj" rows="10" cols="50" required></textarea>
					</div>
					<div class="form-field">
						<button id="update1" class="submitform">Gönder</button>
						<div id="submit-loader">
							<div class="text-loader">Gönderiliyor...</div>
							<div class="s-loader">
								<div class="bounce1"></div>
								<div class="bounce2"></div>
								<div class="bounce3"></div>
							</div>
						</div>
					</div>

				</fieldset>
			</form> <!-- Form End -->
			<!-- contact-warning -->
			<div id="message-warning">
				<i class="fa fa-warning"></i>Mesaj gönderilemedi.Lütfen daha sonra tekrar deneyiniz.<br>

			</div>
			<!-- contact-success -->
			<div id="message-success">
				<i class="fa fa-check"></i>Mesaj gönderildi.En kısa sürede dönüş yapılacak.<br>
			</div>

		</div> <!-- /col-twelve -->

	</div> <!-- /contact-form -->
    
	 <!-- /contact-info -->

</section>

