@using MyBlog.Entity.DTO.PortfolioDTO
@using MyBlog.Entity.Result
@model UIResponse<IEnumerable<PortfolioGetDTO>>
<section id="portfolio">
    <div class="row section-intro">
        <div class="col-twelve">
            <h5>Portföy</h5>
            <h1>Çalışmalarımdan bazıları.</h1>
        </div>
    </div>
    <div class="row portfolio-content">
        <div class="col-twelve">
            <div id="folio-wrapper" class="block-1-2 block-mob-full stack folio-wrapper-h">
                @foreach (var item in Model.Data)
                {
                    <div class="bgrid folio-item" style="padding:20px;">
                        <div class="item-wrap">
                            <img src="images/portfolio/@item.Image" alt="Liberty">
                            <a href="#@item.Id" class="overlay">
                                <div class="folio-item-table">
                                    <div class="folio-item-cell">
                                        <h3 class="folio-title">@item.Name</h3>

                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <button hidden type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                        Launch static backdrop modal
                    </button>
                    <div id="@item.Id" class="popup-modal slider mfp-hide">
                        <div class="media">
                            <img src="images/portfolio/@item.Image" alt="" />
                        </div>
                        <div class="description-box">
                            <h4>@item.Name</h4>
                            <p>@Html.Raw(@item.Description)</p>
                        </div>
                        <div class="link-box">
                            @if(item.Url == "#")
                            {
                                <a>Detay</a>
                                <a class="popup-modal-dismiss">Kapat</a>
                            }
                            else
                            {
                                <a href="@item.Url" target="_blank">Detay</a>
                                <a class="popup-modal-dismiss">Kapat</a>
                            }
                            
                        </div>
                    </div> 
                }
            </div>
            
        </div> 
    </div> 
</section>