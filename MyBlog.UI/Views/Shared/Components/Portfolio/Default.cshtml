                                    <button type="button" class="btn btn-primary">Understood</button>
                                </div>
                            </div>
                        </div>
                    </div> *@

                    <div id="@item.Id" class="popup-modal slider mfp-hide">

                        <div class="media">
                            <img src="images/portfolio/@item.Image" alt="" />
                        </div>

                        <div class="description-box">
                            <h4>@item.Name</h4>
                            <p>@item.Description</p>
                        </div>

                        <div class="link-box">
                            <a href="@item.Url" target="_blank">Detay</a>
                            <a class="popup-modal-dismiss">Kapat</a>
                        </div>

                    </div> <!-- /modal-01 -->

