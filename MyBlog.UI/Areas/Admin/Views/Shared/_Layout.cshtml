<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <title>DarkPan - Bootstrap 5 Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/admin/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/admin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/admin/css/style.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-secondary navbar-dark">
                <a href="/Admin/Contact" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>MyBlog</h3>
                </a>

                <div class="navbar-nav w-100">
                    <a href="/Admin/Contact" class="nav-item nav-link"><i class="fa fa-envelope me-2"></i>Mesajlar</a>
                    <a href="/Admin/About" class="nav-item nav-link"><i class="fa fa-user me-2"></i>Hakkımda</a>
                    <a href="/Admin/Portfolio" class="nav-item nav-link"><i class="fa fa-briefcase me-2"></i>Portföy</a>
                    <a href="/Admin/Skills" class="nav-item nav-link"><i class="fa fa-star me-2"></i>Yetenekler</a>
                    <a href="/Admin/Social" class="nav-item nav-link"><i class="fa fa-camera-retro me-2"></i>Sosyal Medya</a>

                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-user-edit"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <form class="d-none d-md-flex ms-4">
                    <input class="form-control bg-dark border-0" type="search" placeholder="Search">
                </form>
                <div class="navbar-nav align-items-center ms-auto">
                    @await Component.InvokeAsync("Message")


                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <img class="rounded-circle me-lg-2" src="img/user.jpg" alt="" style="width: 40px; height: 40px;">
                            <span class="d-none d-lg-inline-flex">John Doe</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
                            <a href="#" class="dropdown-item">My Profile</a>
                            <a href="#" class="dropdown-item">Settings</a>
                            <a  id="logout" class="dropdown-item " style="cursor:p">Log Out</a>
                        </div>
                    </div>
                </div>
            </nav>
            <div class="modal fade" id="staticBackdropMessage" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog ">
                    <div class="modal-content">
                        <div class="modal-header bg-secondary">
                            <h2 class="modal-title fs-5" id="staticBackdropLabel"></h2>
                            <button type="button" class="btn btn-outline-success" data-bs-dismiss="modal" id="isRead" aria-label="Close">X</button>
                        </div>
                        <input autocomplete="off" hidden name="Id" type="text" class="form-control" id="Id" placeholder="İsim" style="background:black;" readonly>

                        <div class=" bg-secondary modal-body">
                            <label class="modal-title bg-secondary" id="Date"></label>

                            <div class="form-floating mb-3 ">
                                <input autocomplete="off" name="Name" type="text" class="form-control" id="Name" placeholder="İsim" style="background:black;" readonly>
                                <label for="floatingInput">İsim</label>
                            </div>
                            <div class="form-floating mb-3 ">
                                <input autocomplete="off" name="Mail" type="text" class="form-control" id="Mail" placeholder="Mail" style="background:black;" readonly>
                                <label for="floatingInput">Mail</label>
                            </div>
                            <div class="form-floating mb-3 ">
                                <input autocomplete="off" name="Subject" type="text" class="form-control" id="Subject" placeholder="Subject" style="background:black;" readonly>
                                <label for="floatingInput">Konu</label>
                            </div>
                            <div class="form-floating mb-3">
                                <textarea autocomplete="off" name="Message" class="form-control" placeholder="Proje Açıklaması" id="Message" readonly style="height: 150px; background:black;"></textarea>
                                <label for="floatingTextarea">Açıklama</label>
                            </div>
                        </div>
                        <div class="modal-footer bg-secondary">

                            <button type="button" id="isRead" class="btn btn-outline-danger" data-bs-dismiss="modal">İptal</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Navbar End -->
            <!-- Blank Start -->
            <div class="container-fluid pt-4 px-4">
                @RenderBody()
            </div>
            <!-- Blank End -->



        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/lib/chart/chart.min.js"></script>
    <script src="~/admin/lib/easing/easing.min.js"></script>
    <script src="~/admin/lib/waypoints/waypoints.min.js"></script>
    <script src="~/admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/js/contact.js" asp-append-version="true"></script>

    <!-- Template Javascript -->
    <script src="~/admin/js/main.js"></script>
    <script>
        $(document).ready(function () {
            $("#logout").click(function () {
                // AJAX POST isteği gönder
                $.ajax({
                    url: "/Logout",
                    type: "POST",
                    contentType: "application/json",
                    success: function (response) {
                        window.location.href = '/login';
                    }
                });
            });
        });
    </script>
</body>

</html>